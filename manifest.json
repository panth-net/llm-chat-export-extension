{
  "manifest_version": 3,
  "name": "LLM Conversation Exporter",
  "description": "Export conversations from ChatGPT, Claude, Gemini, and Grok to text files. One-click export for AI chats.",
  "version": "1.0.0",
  "author": "Pantheon Network",
  "homepage_url": "http://pantheonnetwork.co/",

  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "offscreen"
  ],

  "host_permissions": [
    "*://chat.openai.com/*",
    "*://chatgpt.com/*",
    "*://claude.ai/*",
    "*://gemini.google.com/*",
    "*://x.com/i/grok*",
    "*://grok.com/c/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Export LLM Conversation",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
